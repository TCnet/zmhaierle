<%= form_for(@kword) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :instr %>
     <%= f.text_area :instr, class: 'form-control',rows: 4,placeholder: "keywords use | or Enter to separate" %>
      <%= f.label :outstr %>
      <%= f.text_area :outstr, class: 'form-control',rows: 4,placeholder: "out string" %>

     <%= f.label :lefwords %>
     <%= f.text_area :lefwords, class: 'form-control',rows: 4 ,placeholder:"need clear words"%>


    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
 <% end %>
