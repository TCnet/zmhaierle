                 name="koutstr" id="koutstr"><%=@kword.outstr %></textarea>
        <textarea class="form-control" rows="4"
                  name="lefwords" id="lefwords"><%=@kword.lefwords %></textarea>



<span><%= link_to "edit",edit_kword_path(@kword) %> | <%= link_to "delete", @kword, method: :delete, data: { confirm: "You sure?"} %></span>
</section>

